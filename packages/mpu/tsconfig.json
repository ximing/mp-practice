{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": false,
    "declaration": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": false,
    "composite": true,
    "allowJs": true,
    "jsx": "preserve",
    "outDir": "./dist/",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "lib": ["esnext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../node_modules/miniprogram-api-typings/types/index.d.ts"
  ],
  "compileOnSave": false,
  "references": []
}
