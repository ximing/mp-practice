{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "rootDir": "./src",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "target": "es6",
    "composite": true
  },
  "include": ["src", "__tests__"],
  "references": [
    {
      "path": "../mpu"
    }
  ]
}
